<h1>New Game</h1>


<form action="score" method="post" class="form">
  <div class="form">
    <label for="word">What is the longest word you can find?</label>
    <input type="text" name="word" required value=<%= params[:word] %>>
  </div>
  <div class="form">
    <input type="submit" value="Play">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
